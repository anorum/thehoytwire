---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'fantasy-recaps'>['data'] & {
  readingTime?: string;
};

const { title, description, pubDate, author, tags, week, season, heroImage, episode } = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

---

<BaseLayout title={title} description={description} image={heroImage}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        {episode && <span class="episode-badge">{episode}</span>}
        {week && season && (
          <span class="week-badge">Week {week} • {season}</span>
        )}
      </div>
      
      <h1 class="post-title">{title}</h1>
      
      <p class="post-description">{description}</p>
      
      <div class="post-info">
        <div class="author-info">
          <span class="author-name">By {author}</span>
          <time class="post-date" datetime={pubDate.toISOString()}>
            {formattedDate}
          </time>
        </div>
        
        {tags && tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    {heroImage && (
      <div class="hero-image">
        <img src={heroImage} alt={title} />
      </div>
    )}

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <div class="post-navigation">
        <a href="/" class="back-to-home">← Back to Home</a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Post Header */
  .post-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .category-badge, .week-badge, .episode-badge {
    background: #3182ce;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .week-badge {
    background: #38a169;
  }

  .episode-badge {
    background: #d97706;
  }

  .post-title {
    font-size: 3rem;
    font-weight: 800;
    color: #1a365d;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .post-description {
    font-size: 1.25rem;
    color: #4a5568;
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-top: 1px solid #e2e8f0;
    border-bottom: 1px solid #e2e8f0;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-weight: 600;
    color: #1a365d;
  }

  .post-date, .updated-date {
    color: #718096;
    font-size: 0.875rem;
  }

  .updated-date {
    font-style: italic;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: #e6fffa;
    color: #234e52;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Hero Image */
  .hero-image {
    margin: 2rem 0 3rem 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Post Content */
  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #2d3748;
    margin-bottom: 4rem;
  }

  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    color: #1a365d;
    font-weight: 700;
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
  }

  .post-content h1 { font-size: 2.25rem; }
  .post-content h2 { font-size: 1.875rem; }
  .post-content h3 { font-size: 1.5rem; }
  .post-content h4 { font-size: 1.25rem; }

  .post-content p {
    margin-bottom: 1.5rem;
  }

  .post-content ul,
  .post-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content li {
    margin-bottom: 0.5rem;
  }

  .post-content blockquote {
    border-left: 4px solid #3182ce;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    background: #f7fafc;
    font-style: italic;
    color: #4a5568;
  }

  .post-content code {
    background: #edf2f7;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.875rem;
  }

  .post-content pre {
    background: #2d3748;
    color: #e2e8f0;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .post-content pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  .post-content strong {
    font-weight: 700;
    color: #1a365d;
  }

  .post-content em {
    font-style: italic;
    color: #4a5568;
  }

  .post-content a {
    color: #3182ce;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .post-content a:hover {
    color: #2c5282;
  }

  /* Post Footer */
  .post-footer {
    border-top: 2px solid #e2e8f0;
    padding-top: 2rem;
    margin-top: 3rem;
  }

  .post-navigation {
    margin-bottom: 2rem;
  }

  .back-to-home {
    color: #3182ce;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border: 2px solid #3182ce;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .back-to-home:hover {
    background: #3182ce;
    color: white;
  }

  .share-section h3 {
    color: #1a365d;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
  }

  .share-btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .share-btn:hover {
    transform: translateY(-2px);
  }

  .share-btn.twitter {
    background: #1da1f2;
    color: white;
  }

  .share-btn.copy {
    background: #4a5568;
    color: white;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.125rem;
    }

    .post-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .share-buttons {
      flex-direction: column;
    }

    .share-btn {
      width: 100%;
    }

  }
</style>

<script>
  function shareOnTwitter() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent(document.title);
    window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
  }

  function copyLink() {
    navigator.clipboard.writeText(window.location.href).then(() => {
      const btn = document.querySelector('.share-btn.copy') as HTMLElement;
      if (btn) {
        const originalText = btn.textContent;
        btn.textContent = 'Copied!';
        setTimeout(() => {
          btn.textContent = originalText;
        }, 2000);
      }
    });
  }
</script>
